{
    "compileOnSave": false,
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "declaration": false,
        "downlevelIteration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "lib": [
            "es2017",
            "dom"
        ],
        "module": "es2020",
        "moduleResolution": "node",
        "outDir": "dist/",
        "paths": {
            "@angular/*": [
                "node_modules/@angular/*"
            ],
            "@components/*": [
                "src/app/components/*"
            ],
            "@models/*": [
                "src/app/models/*"
            ],
            "@services/*": [
                "src/app/services/*"
            ],
            "@admin/*": [
                "src/app/admin/*"
            ],
            "@constants/*": [
                "src/app/constants/*"
            ]
        },
        "skipLibCheck": true,
        "sourceMap": true,
        "target": "es2018",
        "typeRoots": [
            "node_modules/@types"
        ]
    }
}
