{
    "compileOnSave": false,
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "baseUrl": "src/app/",
        "declaration": false,
        "downlevelIteration": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "lib": [
            "es2017",
            "dom"
        ],
        "module": "es2020",
        "moduleResolution": "node",
        "outDir": "dist/",
        "paths": {
            "@angular/*": [
                "../../node_modules/@angular/*"
            ],
            "@components/*": [
                "components/*"
            ],
            "@models/*": [
                "models/*"
            ],
            "@services/*": [
                "services/*"
            ],
            "@admin/*": [
                "admin/*"
            ],
            "@constants/*": [
                "constants/*"
            ]
        },
        "sourceMap": true,
        "target": "es2018",
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "include": [
        "src/**/*.d.ts",
        "src/main.ts",
        "src/polyfills.ts"
    ]
}
