{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    "workarounds:javaLTSVersions",
    ":rebaseStalePrs",
    "npm:unpublishSafe"
  ],
  "dependencyDashboard": true,
  "dependencyDashboardTitle": "AOE Renovate Dependency Dashboard",
  "dependencyDashboardApproval": true,
  "gitAuthor": "aoe-renovate[bot] <201958700+aoe-renovate[bot]@users.noreply.github.com>",
  "branchPrefix": "github-renovate/",

  "forkProcessing": "disabled",

  "automerge": true,
  "automergeType": "pr",
  "platformAutomerge": true,

  "lockFileMaintenance": { "enabled": true },
  "schedule": [
    "at any time"
  ],
  "automergeSchedule": [
    "at any time"
  ],
  "osvVulnerabilityAlerts": true,
  "vulnerabilityAlerts": {
    "labels": ["security"],
    "automerge": true,
    "dependencyDashboardApproval": false
  },
  "enabledManagers": [
    "nvm", 
    "npm", 
    "github-actions", 
    "docker-compose",
    "dockerfile", 
    "maven"
  ],
  "github-actions": { 
    "automerge": true,
    "dependencyDashboardApproval": false
  },
  "dockerfile": { 
    "automerge": true,
    "dependencyDashboardApproval": false
  },
  "docker-compose": { 
    "automerge": true,
    "dependencyDashboardApproval": false
  },
  "packageRules": [
    {
      "automerge": false,
      "dependencyDashboardApproval": true,
      "matchPackageNames": ["*"]
    },
    {
      "automerge": true,
      "dependencyDashboardApproval": false,
      "matchUpdateTypes": ["minor", "patch"],
      "matchPackageNames": ["*"]
    },
    {
      "groupName": "Spring Boot",
      "matchPackageNames": ["org.springframework.boot"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "dependencyDashboardApproval": false
    },
    {
      "groupName": "httpclient5",
      "automerge": true,
      "dependencyDashboardApproval": false,
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchPackageNames": ["/org.apache.httpcomponents.client5*/"]
    },
    {
      "groupName": "Bootstrap",
      "automerge": true,
      "dependencyDashboardApproval": false,
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchPackageNames": ["bootstrap"]
    },
    {
      "groupName": "Multer",
      "automerge": true,
      "dependencyDashboardApproval": false,
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchPackageNames": ["multer", "@types/multer"]
    },
    {
      "groupName": "Async",
      "automerge": true,
      "dependencyDashboardApproval": false,
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchPackageNames": ["async", "@types/async"]
    },
    {
      "groupName": "Dotenv",
      "automerge": true,
      "dependencyDashboardApproval": false,
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchPackageNames": ["dotenv", "@types/dotenv"]
    },
    {
      "groupName": "Http Proxy Middleware",
      "automerge": true,
      "dependencyDashboardApproval": false,
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchPackageNames": ["http-proxy-middleware"]
    }
  ],
  "prConcurrentLimit": 10
}
