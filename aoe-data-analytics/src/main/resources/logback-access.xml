<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
    <appender name="ACCESS-CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <charset>utf-8</charset>
            <pattern>&quot;timestamp&quot;: &quot;%t{yyyy-MM-dd'T'HH:mm:ss.SSSZ}&quot;, &quot;responseCode&quot;: &quot;%s&quot;, &quot;request&quot;: &quot;%replace(%r){'\b(\d{6}[-\\+ABCDEFYXWVU])\d{3}\w(\W)', '$1****$2'}&quot;, &quot;responseTime&quot;: &quot;%D&quot;, &quot;requestMethod&quot;: &quot;%m&quot;, &quot;x-forwarded-for&quot;: &quot;%i{X-Forwarded-For}&quot;, &quot;remote-ip&quot;: &quot;%a&quot;, &quot;response-size&quot;: &quot;%B&quot;, &quot;referer&quot;: &quot;%i{Referer}&quot;,</pattern>
        </encoder>
    </appender>

    <appender-ref ref="ACCESS-CONSOLE"/>
</configuration>