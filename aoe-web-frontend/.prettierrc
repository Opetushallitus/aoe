{
  "arrowParens": "always",
  "bracketSameLine": true,
  "bracketSpacing": true,
  "editor.formatOnSave": true,
  "htmlWhitespaceSensitivity": "ignore",
  "printWidth": 120,
  "semi": true,
  "singleQuote": true,
  "tabWidth": 2,
  "trailingComma": "all",
  "overrides": [
    {
      "files": "*.component.html",
      "options": {
        "parser": "angular",
        "singleQuote": false,
        "tabWidth": 2
      }
    },
    {
      "files": "*.html",
      "options": {
        "parser": "html",
        "singleQuote": false,
        "tabWidth": 2
      }
    }
  ]
}
