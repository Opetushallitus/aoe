# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 120
trim_trailing_whitespace = true

[*.md]
max_line_length = off

[*.{js,ts}]
ij_typescript_enforce_trailing_comma = keep

[*.json]
indent_size = 2
ij_typescript_enforce_trailing_comma = remove
