{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2023",
    "lib": ["es2023", "dom"],
    "noImplicitAny": false,
    "noUncheckedIndexedAccess": true,
    "outDir": "dist",
    "paths": {
      "@/*": ["./src/*"],
      "@aoe/*": ["./types/aoe/*"],
      "@api/*": ["./src/api/*"],
      "@domain/*": ["./src/domain/*"],
      "@query/*": ["./src/query/*"],
      "@resource/*": ["./src/resource/*"],
      "@search/*": ["./src/search/*"],
      "@services/*": ["./src/services/*"],
      "@util/*": ["./src/util/*"]
    },
    "resolveJsonModule": true,
    "rootDir": "./src",
    "skipLibCheck": true,
    "sourceMap": true,
    "inlineSources": true,
    "strict": false,
    "typeRoots": ["./types"]
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*.js", "src/**/*.json", "src/**/*.ts"]
}
