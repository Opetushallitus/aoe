{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2020"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noUncheckedIndexedAccess": true,
    "outDir": "dist",
    "paths": {
      "@/*": ["*"],
      "@aoe/*": ["../types/aoe/*"],
      "@api/*": ["api/*"],
      "@config/*": ["config/*"],
      "@domain/*": ["domain/*"],
      "@query/*": ["query/*"],
      "@resource/*": ["resource/*"],
      "@search/*": ["search/*"],
      "@services/*": ["services/*"],
      "@util/*": ["util/*"]
    },
    "resolveJsonModule": true,
    "rootDir": "./src",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": false,
    "target": "es2020",
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*.js", "src/**/*.json", "src/**/*.ts"]
}
