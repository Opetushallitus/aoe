{
  "arrowParens": "always",
  "bracketSpacing": true,
  "tabWidth": 2,
  "printWidth": 120,
  "trailingComma": "all",
  "semi": true,
  "singleQuote": true,
  "overrides": [
    {
      "files": [
        "**/*.json",
        "**/*.yml"
      ],
      "options": {
        "singleQuote": false,
        "trailingComma": "none"
      }
    }
  ]
}
