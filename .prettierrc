{
  "arrowParens": "always",
  "bracketSpacing": true,
  "editor.formatOnSave": true,
  "printWidth": 120,
  "semi": true,
  "singleQuote": true,
  "tabWidth": 2,
  "trailingComma": "all",
  "useTabs": false,
  "overrides": [
    {
      "files": [
        "**/*.html",
        "**/*.scss",
        "**/*.css"
      ],
      "options": {
        "singleQuote": false,
        "tabWidth": 2
      }
    },
    {
      "files": [
        "**/*.ts",
        "**/*.js"
      ],
      "options": {
        "tabWidth": 2
      }
    }
  ]
}
