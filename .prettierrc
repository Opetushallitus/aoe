{
    "bracketSpacing": true,
    "singleQuote": true,
    "printWidth": 120,
    "trailingComma": "all",
    "arrowParens": "always",
    "semi": true,
    "tabWidth": 4,
    "bracketSameLine": true,
    "htmlWhitespaceSensitivity": "ignore",
    "overrides": [
        {
            "files": "*.component.html",
            "options": {
                "parser": "angular",
                "singleQuote": false
            }
        },
        {
            "files": "*.html",
            "options": {
                "parser": "html",
                "singleQuote": false
            }
        }
    ]
}
